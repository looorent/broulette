{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Dev webapp",
      "webRoot": "${workspaceFolder}/src",
      "url": "http://localhost:5173",
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug scraper",
      "program": "${workspaceFolder}/scraper/dist/index.js",
      "outFiles": [
        "${workspaceFolder}/scraper/dist/**/*.js"
      ],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/scraper/dist/**/*.js",
        "${workspaceFolder}/scraper/src/**/*.ts"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceFolder}/scraper"
    }
  ]
}